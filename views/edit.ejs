<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Your Contact Details</h1>
        <div style="width: 30%;margin: 30px auto;">
            <form action="/person/edit/<%= person._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="person[name]" value="<%= person.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="person[date]" value="<%= person.dob %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="person[email_id]" value="<%= person.email_id %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="person[phone]" value="<%= person.phone %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>