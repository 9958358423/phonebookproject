<%- include("partials/header") %>
<div class="jumbotron" style="text-align: center;background-color: darkblue;color: greenyellow;width: 100%;height: 100%;"> 
    <div class="row">
        <h2 class ="lead"><%= person.name %> </h2>
    </div>
    <div class="row">
        <p><%= person.dob %> </p>
    </div>
    <div class="row">
        <p><%= person.email_id %> </p>
    </div>
