<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Contact</h1>
        <div style="width: 30%;margin: 30px auto;">
            <form action="/person/new" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter Your Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="date" placeholder="DD/MM/YYYY">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email_id" placeholder="Enter Your Mail Id">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="phone" placeholder="Enter Your Contact Number">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>